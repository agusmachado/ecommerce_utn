<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include('./partials/header.ejs') %> 
   

  <section class="py-5">
    <div class="container px-4 px-lg-5 mt-2">
      <% cartItems.forEach(item => { %>
        <div class="cart-item" id="cartItem_<%= item._id %>">
            <div class="d-flex flex-wrap m-5 ">
                <div class="card " style="width: 30rem; ">
                    <h4 class="p-1 m-1"><%= item.name %></h4>
                    <h6 class="p-1 m-1">Tienda Oficial</h6>
                    <hr>
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="<%= item.img %>" alt="<%= item.name %>" style="height: 25vh; "/>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">                           


                        <!-- Columna para detalles (cantidad) -->
                        <div class="d-flex align-items-center mt-4 px-3 py-2">                        
                            <p class="custom-message ml-2">$<%= item.price %></p>
                        </div>

                        <!-- Links -->
                        <nav class="navbar navbar-expand-lg ">
                            <div class="container-fluid">

                                <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                        <li class="nav-item">                                        
                                            <a href="#" class="nav-link remove-from-cart" data-product-id="<%= item._id %>">Eliminar</a>
                                        </li> 
                                    </ul>
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
            <% }); %>    
    
    
                <!-- Card Aside -->
                <div class="card h-25 " style="width: 18rem; margin-left: 30px;">
                    <div class="card-body">
                        <h5 class="card-title">Resumen de Compra</h5>
                        <hr>
                        <div class="d-flex justify-content-between">
                            <p class="card-subtitle mb-2 text-body-secondary">Producto</p>
                            <p class="card-text">$100</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="card-subtitle mb-2 text-body-secondary">Envio</p>
                            <p class="card-text">$10</p>
                        </div>
                        <div class="mb-2">
                            <a href="#" class="card-link text-decoration-none">Ingresar Cupon </a>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="card-subtitle mb-2 text-body-secondary">Total</p>
                            <p class="card-text">$10</p>
                        </div>
                        <button class="btn btn-secondary mt-4">Comprar ahora</button>
                    </div>
                </div>    
            </div>
        </div>
    </div>
</section>
  
  <!-- Script para manejar la eliminación de productos del carrito -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const removeButtons = document.querySelectorAll('.remove-from-cart');
  
      removeButtons.forEach(button => {
        button.addEventListener('click', async (event) => {
          event.preventDefault();
          const productId = button.dataset.productId;
  
          try {
            const response = await fetch(`/removeFromCart/${productId}`, {
              method: 'DELETE',
              headers: {
                'Content-Type': 'application/json',
              },
            });
            const data = await response.json();
            console.log(data);
  
            // Verifica si la eliminación fue exitosa antes de recargar la página
            if (response.ok) {
              // Recarga la página después de la eliminación exitosa
              window.location.reload();
            }
  
          } catch (error) {
            console.error('Error al eliminar producto del carrito:', error);
          }
        });
      });
    });
  </script>

    <%- include('./partials/footer.ejs') %> 
</body>
</html>