<style>
    @media only screen and (max-width: 767px) {
       .num2,
       .num1{display: none;}
       
    }

 
    @media only screen and (min-width: 768px) and (max-width: 1199px) {
     .num1{margin-left: 50px;}
     .num2{display: none;}
    }
</style>
<body>
    <body>
        

       <!-- NAV SUPERIOR VERDE --> 

        <header style="background-color: #003D29; height: 5vh; " >    
            <ul class="nav justify-content-center align-items-center">                
                <li class="nav-item mt-1 num2" style="color: white;">
                    <p>Obtenga un 50% de descuento || Compre ahora</p>
                </li>
            </ul>
        </header>


        <!-- FIN DEL NAV SUPERIOR VERDE -->

        
        <!-- HEADER PRINCIPAL -->

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="/">E-Commerce UTN</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center align-items-center" id="navbarSupportedContent">
                    <ul class="navbar-nav me-5">
                        <!-- CATEGORIAS -->
                        <li class="nav-item dropdown">
                            <a class="nav-link active dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                                Categorías
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="/estaticas/desktop">Escritorio</a></li>
                                <li><a class="dropdown-item" href="/estaticas/run">Correr</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/estaticas/gamers">Gamer</a></li>
                            </ul>
                        </li>
                        <!-- NUEVO -->
                        <li class="nav-item">
                            <a class="nav-link active" href="/estaticas/nuevo" style="text-decoration: none; position: relative;" onmouseover="this.style.textDecoration='underline'; this.style.textDecorationThickness='2px'; this.style.textDecorationSkipInk='none'; this.style.textUnderlineOffset='3px';" onmouseout="this.style.textDecoration='none';">Lo Nuevo!</a>
                        </li>
                        <!-- ENVIOS -->
                        <li class="nav-item">
                            <a class="nav-link active" href="/estaticas/envios" style="text-decoration: none; position: relative;" onmouseover="this.style.textDecoration='underline'; this.style.textDecorationThickness='2px'; this.style.textDecorationSkipInk='none'; this.style.textUnderlineOffset='3px';" onmouseout="this.style.textDecoration='none';">Envíos</a>
                        </li>
                        
                        
                    </ul>
                    <!-- INPUT BÚSQUEDA -->
                    <form class="d-flex align-items-center me-5" action="/buscar-por-keyword" method="GET">
                        <div class="input-group">
                            <input type="text" class="form-control rounded-0" name="keyword" placeholder="Buscar"
                                aria-label="Buscar" aria-describedby="basic-addon2">
                            <button type="submit" class="input-group-text bg-white border-0" id="basic-addon2">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>
                    <!-- ÍCONO Y TEXTO CUENTA -->
                    <div class="d-flex ms-5">
                        <% if (user) { %>
                            <div class="me-3">
                                <%= user.username %>
                                <a class="ms-3" href="/auth/logout">Logout</a>
                            </div>
                            <!-- ÍCONO Y TEXTO CARRITO -->
                            <div>
                                <a class="btn btn-outline-none" href="/cart">
                                    <i class="fas fa-shopping-cart"></i> Ir al carrito
                                </a>
                            </div>
                        <% } else { %>
                            <div>
                            <ul class="navbar-nav me-5">                                                                
                                <li class="nav-item dropdown">                                
                                    <a class="nav-link active dropdown-toggle ms-2" href="#" data-bs-toggle="dropdown" aria-expanded="false">Login</a>
                                    <ul class="dropdown-menu bg-danger text-center" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item font-weight-bold bg-danger text-white" href="/auth/google">Google</a></li>
                                    </ul>
                                </li>
                            </ul>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </nav>
       
       